{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{texto}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registrarse
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                         <input type="text" class="form-control" name="nombre" placeholder="Ingrese nombre">
                    </div>
                    <div class="form-group">
                         <input type="email" class="form-control" name="email" placeholder="Ingrese e-mail">
                    </div>
                    <div class="form-group">
                         <input type="password" class="form-control" name="password" placeholder="Ingrese password">
                    </div>                                        
                    <div class="form-group">
                         <input type="password" class="form-control" name="confirm_password" placeholder="Confirme password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>