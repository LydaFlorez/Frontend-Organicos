<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Ficha.</h3>
        </div>
        <div class="card-body">
            <form action="/producto/edit-producto/{{producto._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="palabra" class="form-control" placeholder="palabra" value="{{producto.palabra}}">
                </div>
                <div class="form-group">
                    <input type="text" name="tipo" class="form-control" placeholder="tipo" value="{{producto.tipo}}">
                </div>
                <div class="form-group">
                    <input type="text" name="significado" class="form-control" placeholder="significado" value="{{producto.significado}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
