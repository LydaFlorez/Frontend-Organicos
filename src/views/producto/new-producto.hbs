{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{texto}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header">
            <h1>Producto</h1>
        </div>
        <div class="card-body">
            <form action="/producto/new-producto" method="POST">
                <div class="form-group">
                    <input type="text" name="producto" placeholder="Ingrese producto" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="tipo" placeholder="Ingrese tipo producto" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="peso" placeholder="Ingrese cantidad" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>                
            </form>
        </div>
    </div>
</div>